<Window x:Class="WpfApp1.Window.Emploe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Window"
        mc:Ignorable="d"
        Title="Emploe" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="\Resource\woman.jpg"
              Grid.RowSpan="2"
              Grid.ColumnSpan="2"
              />
        <TextBlock Text="Иванов Иван Иванович"
         FontSize="15"
         VerticalAlignment="Top"
         Grid.Row="2" Grid.ColumnSpan="2"
         FontWeight="Bold"
         TextWrapping="Wrap"
        TextAlignment="Center"/>
        <TextBlock Text="Id: 00001"
            FontSize="15"
             VerticalAlignment="Bottom"
             Grid.Row="2" Grid.ColumnSpan="2"
             TextWrapping="Wrap"
             TextAlignment="Center"
                 
             Foreground="Gray"/>
        <Button x:Name="readerBtn"
               Content="Читатели"
               Grid.Row="3"
               Grid.ColumnSpan="2"
               FontSize="20"
               VerticalContentAlignment="Center"
               Background="Wheat"
               Click="readerBtn_Click"/>
        <Button x:Name="bookBtn"
            Content="Книги"
            Grid.Row="4"
            Grid.ColumnSpan="2"
            FontSize="20"
            VerticalContentAlignment="Center"
            Background="Wheat"
               Click="bookBtn_Click"/>

        <Button x:Name="reportBtn"
            Content="отчеты"
            Grid.Row="5"
            Grid.ColumnSpan="2"
            FontSize="20"
            VerticalContentAlignment="Center"
            Background="Wheat"  Click="reportBtn_Click"/>
        <Button x:Name="exitBtn"
            Content="Выход"
            Grid.Row="6"
            Grid.ColumnSpan="2"
             Grid.RowSpan="2"
              FontSize="20"
             VerticalContentAlignment="Center"
             Background="DarkRed"   
               Foreground="White"
               Click="exitBtn_Click"/>
        <Frame x:Name = "menuFr"
        Grid.Column="2"
               Grid.ColumnSpan="6"
               Grid.RowSpan="8"/>
    </Grid>
</Window>
