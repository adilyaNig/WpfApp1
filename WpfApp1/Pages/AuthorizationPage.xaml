<Page x:Class="WpfApp1.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация"
                   FontSize="35"
                   VerticalAlignment="Center"
                   Grid.Row="0" Grid.Column="2"
                   Grid.ColumnSpan="2"
                   TextAlignment="Center"/>

        <TextBlock Text="ЛОГИН"
           FontSize="18"
           VerticalAlignment="Top"
           Grid.Row="1" Grid.Column="2"
           Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"/>
        
        
        <TextBox x:Name="loginTb"
                 Grid.Column="2"
                 Grid.Row="1"
                 Grid.ColumnSpan="2"
                 Height="50"
                 TextAlignment="Center"
                 FontSize="22"
                 Padding="5"/>

        <TextBlock Text="ПАРОЛЬ"
                   FontSize="18"
                   VerticalAlignment="Top"
                   Grid.Row="2" Grid.Column="2"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"/>

        <PasswordBox x:Name="passwordTb"
         Grid.Column="2"
         Grid.Row="2"
         Grid.ColumnSpan="2"
         Height="50"
         FontSize="22"
         Padding="5"/>

        <Button x:Name="loginBtn"
                Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2"
                Height="60"
                Width="160"
                Content="ВОЙТИ"
                Click="loginBtn_Click"
            />
        <Button x:Name="loginReaderBtn"
    Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="2"
    Height="60"
    Width="180"
    Content="вход для читателя"
    Click="loginReaderBtn_Click"
/>
    </Grid>
</Page>
